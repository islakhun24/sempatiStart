<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="80mm"
    android:rotation="90"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="30mm"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tvNoTiket"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:text="No. Tiket: 123456789"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="80mm"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Trayek : Medan - Banda Aceh PATAS VIP"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Jam : 20.00"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="10sp"
            android:textAlignment="textEnd"
            android:layout_weight="2"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Tanggal Berangkat : 1 September 2020"/>
    </LinearLayout>
    <View
        android:layout_marginTop="2dp"
        android:background="@drawable/dash"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama: JAFAR GHAFUR"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Kursi: 1A"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kelas Bis: Patas VIP"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lyout"
            android:layout_toLeftOf="@id/qrCode"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Berangkat: Loket Medan"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginLeft="16dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Tujuan: Banda Aceh"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:weightSum="4">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="No.Bagasi: "
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="No.plat: ..."
                    android:textColor="#000"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Harga: Rp.250,000"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/dash"
                android:layout_width="match_parent"
                android:layout_height="8dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perhatian: "/>
                    <TextView
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Lapor tiket 30 menit sebelum keberangkatan"/>
                    <TextView
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Dilarang membawa SAJAM dan NARKOTIKA"/>
                    <TextView
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Barang-barang berharga berupa emas, uang, dll. Bila dalam perjalanan, kecelakaan walaupun didalam tas/bagasi, jika hilang bukan tanggung jawab dari pihak manajemen PO Sempati Star"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="NB. : Telah asuransi penumpang P.T. Jasa \n Raharja (Berdasarkan U.U.No.33/1964)"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/qrcode"
            android:id="@+id/qrCode"
            android:layout_alignParentRight="true"
            android:layout_width="15mm"
            android:layout_height="15mm"/>
    </RelativeLayout>
</LinearLayout>
