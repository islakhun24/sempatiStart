<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.AktivasiAct">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#f1c40f"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Password"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@id/view1"
                android:textSize="24dp"/>
            <View
                android:id="@+id/view1"
                android:layout_marginTop="-20dp"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_marginRight="-10dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_transparant1"/>
            <View
                android:layout_below="@id/view1"
                android:layout_marginTop="-60dp"
                android:id="@+id/view2"
                android:layout_marginRight="-50dp"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_transparant2"/>
        </RelativeLayout>
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_marginTop="-30dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_login">
            <TextView
                android:textColor="@color/colorGray5"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Aktivasi"/>
            <EditText
                android:id="@+id/etKodeAktivasi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:hint="Kode aktivasi"
                android:textSize="14sp"
                android:textColor="@color/colorGray5"
                android:textColorHint="@color/colorGray5"
                android:paddingRight="8dp"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:background="@drawable/card_edittext"/>
            <TextView
                android:textColor="@color/colorGray5"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:textColorHint="@color/colorGray5"
                android:layout_height="wrap_content"
                android:text="Password"/>
            <EditText
                android:id="@+id/etPassword1"
                android:hint="Password"
                android:textColor="@color/colorGray5"
                android:textColorHint="@color/colorGray5"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/card_edittext"/>
            <TextView
                android:textColor="@color/colorGray5"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:textColorHint="@color/colorGray5"
            android:layout_height="wrap_content"
            android:text="Ulangi Password"/>
            <EditText
                android:id="@+id/etPassword2"
                android:hint="Ulangi Password"
                android:textColor="@color/colorGray5"
                android:textColorHint="@color/colorGray5"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:background="@drawable/card_edittext"/>
            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
            <Button
                android:background="@color/background"
                android:id="@+id/btnAktivasi"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ganti Password"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>